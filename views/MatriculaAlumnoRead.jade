extends layout

block content
  h2 Listado Matriculas de Alumnos:
  div(class='well')
    input(type="text" id="myInput" onkeyup="buscar()" placeholder="buscar por nombre")
    table(class='table' id='tabla')
            tr              
                th id
                th nombre
                th apellido
                th email
                th inicio
                th fin
                th asignatura
            each matricula, i in matriculas
                tr
                   tr
                td #{matricula.id}
                td #{matricula.nombreAlumno}
                td #{matricula.apellido}
                td #{matricula.email}
                td #{matricula.inicio}
                td #{matricula.fin}
                td #{matricula.nombreAsignatura}
                   