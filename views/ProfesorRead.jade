extends layout

block content
  h2 Listado de profesores:
  div(class='well')
    input(type="text" id="myInput" onkeyup="buscar()" placeholder="buscar por nombre")
    table(class='table' id='tabla')
        tr
            th ID
            th Nombre
            th Apellidos
            th Email
        //- 
            Esto es un comentario
            multilinea. Para terminar, hay
            que poner otro elemento (como el each
            de debajo). 
        each profesor in profesores
            tr
                td #{profesor.id}  
                td #{profesor.nombre}
                td #{profesor.apellido}
                td #{profesor.email}