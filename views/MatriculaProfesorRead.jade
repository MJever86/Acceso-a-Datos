extends layout

block content
  h2 Listado de profesores matriculados:
  div(class='well')
    input(type="text" id="myInput" onkeyup="buscar()" placeholder="buscar por nombre")
    table(class='table' id='tabla')
        tr
            th id
            th nombre
            th apellido
            th email
            th inicio
            th fin
            th horas
            th asignatura
        each matricula, i in matriculas
            tr
                td #{matricula.id}
                td #{matricula.nombreProfesor}
                td #{matricula.apellido}
                td #{matricula.email}
                td #{matricula.inicio}
                td #{matricula.fin}
                td #{matricula.horas}
                td #{matricula.nombreAsignatura}
                    