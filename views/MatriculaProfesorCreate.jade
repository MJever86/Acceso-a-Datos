extends layout

block content
  h2 Matriculaci√≥n de Profesores:
  div(class='well')
    table(class='table')
            tr               
                th id
                th nombre
                th apellido
                th email
                th asignatura
                th inicio
                th fin
                th horas
                th matricular
            each profesor, i in profesores
                tr
                    td #{profesor.id}
                    td #{profesor.nombre}
                    td #{profesor.apellido}
                    td #{profesor.email}
                    td
                        form(method='post')
                            select(class="selectpicker" name='asignatura')
                                each asignatura, i in asignaturas
                                    option(value="#{asignatura.nombre}"+","+"#{asignatura.ciclo}"+","+"#{asignatura.curso}") #{asignatura.nombre}
                            td
                                input(name='inicio',id='fechaInicio'+i class='form-control',type='text' placeholder="2016" onclick="mostrarCalendarioInicio("+i+")" required)
                            td
                                input(name='fin',id='fechaFin'+i class='form-control',type='text' placeholder="2017" onclick="mostrarCalendarioFin("+i+")" required)
                            td
                                input(name='horas', class='form-control',type='number' min='1' required)
                            td 
                                button(name='profesor' value="#{profesor.id}"+","+"#{profesor.nombre}"+","+"#{profesor.apellido}"+","+"#{profesor.email}" class='btn btn-success' type='submit') Matricular